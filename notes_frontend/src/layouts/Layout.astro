---
import ThemeToggle from '../components/ThemeToggle.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="color-scheme" content="light dark">
    <title>Notes App</title>
  </head>
  <body>
    <ThemeToggle />
    <slot />
  </body>
</html>

<style>
  :root {
    /* Brand colors */
    --color-primary: #4f46e5; /* primary */
    --color-secondary: #64748b; /* secondary */
    --color-accent: #fbbf24; /* accent */

    /* Light theme variables */
    --bg-color: #ffffff;
    --text-color: #0f172a;
    --text-secondary: #475569;
    --border-color: rgba(15, 23, 42, 0.08);
    --card-bg: #ffffff;
    --card-hover-bg: #f8fafc;
    --shadow-color: rgba(2, 6, 23, 0.06);
    --shadow-hover-color: rgba(2, 6, 23, 0.1);

    --radius-sm: 8px;
    --radius-md: 12px;
    --radius-lg: 16px;

    --sidebar-width: 320px;
  }

  body.dark-theme {
    /* Dark theme variables */
    --bg-color: #0b1220;
    --text-color: #f8fafc;
    --text-secondary: #cbd5e1;
    --border-color: rgba(255, 255, 255, 0.12);
    --card-bg: rgba(30, 41, 59, 0.72);
    --card-hover-bg: rgba(30, 41, 59, 0.56);
    --shadow-color: rgba(0, 0, 0, 0.32);
    --shadow-hover-color: rgba(0, 0, 0, 0.45);
  }

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: var(--bg-color);
    color: var(--text-color);
    transition: background-color 0.3s ease, color 0.3s ease;
    font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Noto Sans, Ubuntu, Cantarell, Helvetica Neue, Arial, "Apple Color Emoji", "Segoe UI Emoji";
  }

  /* Reset base elements a bit for consistency */
  *, *::before, *::after { box-sizing: border-box; }
  a { color: inherit; text-decoration: none; }
  button { font: inherit; }
  input, textarea { font: inherit; color: inherit; }
</style>
